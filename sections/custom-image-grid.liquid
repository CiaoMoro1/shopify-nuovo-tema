<!-- Markup della sezione -->
<div class="image-gallery">
    {% for block in section.blocks %}
        <div class="image-wrapper">
            <a href="{{ block.settings.image_url }}">
                <img src="{{ block.settings.image | img_url: '1200x1200' }}" alt="{{ block.settings.alt_text }}" />
                <div class="image-text">{{ block.settings.image_text }}</div>
            </a>
        </div>
    {% endfor %}
</div>


<!-- Stili CSS -->
<style>

.image-text {
    text-align: center; /* Centra il testo */
    padding: 5px; /* Aggiunge spazio intorno al testo */
    font-size: 2rem; /* Imposta la dimensione del font */
    position: relative;
    color: black;
    /* Altri stili come colore del testo, ecc. */
}

  .image-gallery {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 16px;
      width: 80%;
      margin: 0 auto;
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .image-wrapper {
      position: relative;
      overflow: hidden;
      border-radius: 20px;
      opacity: 0;
      animation: fadeIn 0.5s forwards;
      transition: transform 0.3s; /* Aggiungi la transizione per lo zoom */
  }

  /* Aggiunta di ritardi per ciascun box */
  .image-wrapper:nth-child(1) { animation-delay: 0.1s; }
  .image-wrapper:nth-child(2) { animation-delay: 0.2s; }
  .image-wrapper:nth-child(3) { animation-delay: 0.3s; }
  .image-wrapper:nth-child(4) { animation-delay: 0.4s; }
  .image-wrapper:nth-child(5) { animation-delay: 0.5s; }
  .image-wrapper:nth-child(6) { animation-delay: 0.6s; }
  .image-wrapper:nth-child(7) { animation-delay: 0.7s; }
  .image-wrapper:nth-child(8) { animation-delay: 0.8s; }
  .image-wrapper:nth-child(9) { animation-delay: 0.9s; }
  .image-wrapper:nth-child(10) { animation-delay: 1.0s; }
  .image-wrapper:nth-child(11) { animation-delay: 1.1s; }
  .image-wrapper:nth-child(12) { animation-delay: 1.2s; }

  .image-wrapper:hover {
      box-shadow: 2px 5px 10px rgba(0, 0, 0, 0.1);
      transform: scale(1.02);
  }

  .image-wrapper img {
      width: 100%;
      height: auto;
      display: block;
      transition: transform 0.3s;
  }

.image-wrapper:hover .image-text {
    z-index: 3; /* Aumenta il z-index durante l'hover per mantenere il testo sopra */
}

.image-wrapper a, .image-wrapper a:hover, .image-wrapper a:visited, .image-wrapper a:active {
    text-decoration: none !important;
}

.image-wrapper .image-text, .image-wrapper .image-text a {
    text-decoration: none !important;
}

  .overlay-text {
      position: absolute;
      color: white;
      background-color: rgba(255, 239, 213, 0.5);
      padding: 5px 10px;
      border-radius: 5px;
      transform: translate(-50%, -50%);
      z-index: 1;
      font-size: 2vw; /* Adattato alla larghezza del viewport */
      line-height: 1;
      font-family: 'Arial', sans-serif; /* Scegli il font che preferisci. Qui ho usato Arial come esempio */
  }

  .overlay-text.top-left { top: 10%; left: 10%; }
  .overlay-text.top-right { top: 10%; right: 10%; }
  .overlay-text.bottom-left { bottom: 10%; left: 10%; }
  .overlay-text.bottom-right { bottom: 10%; right: 10%; }
  .overlay-text.center { top: 80%; left: 50%; }

 .overlay-text .clickable-text {
    text-decoration: none; /* Rimuove la sottolineatura del testo */
  }

  .clickable-text {
      cursor: pointer;
      text-decoration: underline;
  }

  /* Modifiche per mobile */
  @media (max-width: 768px) {
      .image-gallery {
          grid-template-columns: repeat(2, 1fr);
          width: 90%;
      }
       .overlay-text {
           font-size: 16px; /* Dimensione fissa per piccoli schermi */
    }
  }
</style>

<!-- Definizione dello schema per la personalizzazione -->
{% schema %}
{
  "name": "Galleria Immagini",
  "settings": [],
  "blocks": [
    {
      "type": "image",
      "name": "Immagine",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Carica Immagine"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Testo Alternativo",
          "default": "Descrizione immagine"
        },
        {
          "type": "url",
          "id": "image_url",
          "label": "URL dell'immagine"
        },
        {
          "type": "text",
          "id": "image_text",
          "label": "Testo sopra l'immagine",
          "default": "Inserisci il tuo testo qui"
        },
        {
          "type": "select",
          "id": "text_position",
          "label": "Posizione del testo",
          "options": [
            { "value": "top-left", "label": "In alto a sinistra" },
            { "value": "top-right", "label": "In alto a destra" },
            { "value": "bottom-left", "label": "In basso a sinistra" },
            { "value": "bottom-right", "label": "In basso a destra" },
            { "value": "center", "label": "Centrato" }
          ],
          "default": "center"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Personalizzato"
    }
  ],
  "max_blocks": 12
}
{% endschema %}
